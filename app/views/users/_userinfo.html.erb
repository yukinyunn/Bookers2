<h2>User info</h2>
  <%= image_tag user.get_profile_image(100, 100) %>

  <table class="table">
    <tbody>
      <tr>
        <th>name</th>  <!--ユーザー名-->
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>  <!--自己紹介-->
        <th><%= user.introduction %></th>
      </tr>

    </tbody>
  </table>

  <div class="row">  <!--editの画面へ-->
    <%= link_to edit_user_path(user), class: "col-xs-12 btn btn-outline-secondary btn-block form-control" do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  </div>

